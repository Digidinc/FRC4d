# Node environment: development, production, test
NODE_ENV=development

# Service settings
PORT=4001
SERVICE_VERSION=0.1.0

# Logging settings
LOG_LEVEL=info

# Database settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=astronomical_service
DB_USER=postgres
DB_PASSWORD=postgres

# Redis settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600

# Swiss Ephemeris settings
EPHE_PATH=./ephemeris

# API rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS settings
ALLOWED_ORIGINS=http://localhost:3000,https://fractalresonance.com

# JWT settings for API authorization
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=30d